<%= react_component 'ExplanatoryModal' %>

<div class="col-sm-3 col-sm-offset-3 login">
  <%= form_tag(access_attempt_login_path, :method => :post) do %>
  <table>
  <tr>
    <th></th>
    <th>
      <% if !flash[:notice].blank? %>
        <div class="col-sm-12">
          <span class="notice"><%= flash[:notice] %></span>  
        </div>
     <% end %>
    </th>
  </tr>
    <tr>
      <td>Username: </td>
      <td><%= text_field_tag(:username, params[:username]) %></td>
    </tr>
    <tr>
      <td>Password: </td>
      <td><%= password_field_tag(:password) %></td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td><%= submit_tag("Log In", :class => "btn btn-primary") %></td>
    </tr>
  </table>
  <% end %>
</div>
